{% extends 'base.html.twig' %}

{% block body %}


<div class="panel panel-default panel-table">
      <div class="panel-heading">
        <div class="pull-right">
          <a href="{{ path('admin_gestionnaire_new') }}">
            <button type="button" class="btn btn-primary btn-labeled"><i class="zmdi zmdi-plus-square zmdi-hc-lg"></i>
                  <span class="btn-label btn-label-right">Ajouter un nouveau Gestionnaire</span>
            </button>
          </a>
        </div>
        <h3 class="m-t-0 m-b-5">Listes des Gestionnaires</h3>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered dataTable" id="table-2">
            <thead>
              <tr>
                <th class="text-center">Id</th>
                <th class="text-center">Departements</th>
                <th class="text-center">Noms & prenoms</th>
                <th class="text-center">Logins</th>
                <th class="text-center">Fonctions</th>
                <th class="text-center">Contacts</th>
                <th class="text-center">Actions</th>
              </tr>
            </thead>
            <tbody>
              {% for gestionnaire in gestionnaires %}
                  <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ gestionnaire.departement.nom }}</td>
                      <td>{{ gestionnaire.nom|upper }} {{ gestionnaire.prenoms|title }}</td>
                      <td>{{ gestionnaire.user }}</td>
                      <td class="text-left">{{ gestionnaire.fonction }}</td>
                      <td class="text-center">{{ gestionnaire.contact }}</td>
                      <td>
                          <ul>


                          </ul>
                          <div class="btn-group">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                              Action
                              <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                              <li>
                                  <a href="{{ path('admin_gestionnaire_show', { 'id': gestionnaire.id }) }}">Voir</a>
                              </li>
                              <li>
                                  <a href="{{ path('admin_gestionnaire_edit', { 'id': gestionnaire.id }) }}">Modifier</a>
                              </li>
                            </ul>
                          </div>
                      </td>
                  </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="{{ asset('ressources/js/tables-datatables.min.js')}}"></script>
{% endblock %}
