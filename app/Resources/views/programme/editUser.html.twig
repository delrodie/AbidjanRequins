{% extends 'base.html.twig' %}

{% block title %}Modification des Programmes{% endblock %}

{% block body %}

    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="pull-right">
          <a href="{{ path('programme_index') }}">
            <button type="button" class="btn btn-primary btn-labeled"><i class="zmdi zmdi-assignment-o zmdi-hc-lg"></i>
                  <span class="btn-label btn-label-right">Liste des programmes</span>
            </button>
          </a>
        </div>
          <h3 class="m-y-0">Modification</h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-sm-10 col-md-8 col-sm-offset-1 col-md-offset-2">
            {{ form_start(edit_form, {'attr': {'data-toggle': 'validator'}} )}}

                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="" class="control-label">Departement </label>
                      {{ form_widget(edit_form.departement)}}
                      {{ form_errors(edit_form.departement)}}
                      <div class="help-block with-errors"></div>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="" class="control-label">Activité</label>
                      {{ form_widget(edit_form.activite)}}
                      {{ form_errors(edit_form.activite)}}
                      <div class="help-block with-errors"></div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="" class="control-label">Lieu</label>
                      {{ form_widget(edit_form.lieu)}}
                      {{ form_errors(edit_form.lieu)}}
                      <div class="help-block with-errors"></div>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="" class="control-label">Cible</label>
                      {{ form_widget(edit_form.cible)}}
                      {{ form_errors(edit_form.cible)}}
                      <div class="help-block with-errors"></div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group" id="sandbox-container">
                      <label for="" class="control-label">Debut période</label>
                      {{ form_widget(edit_form.datedeb)}}
                      {{ form_errors(edit_form.datedeb)}}
                      <div class="help-block with-errors"></div>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group" id="sandbox-container">
                      <label for="" class="control-label">Fin période</label>
                      {{ form_widget(edit_form.datefin)}}
                      {{ form_errors(edit_form.datefin)}}
                      <div class="help-block with-errors"></div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <label for="" class="control-label">Objectif</label>
                      {{ form_widget(edit_form.objectif)}}
                      {{ form_errors(edit_form.objectif)}}
                      <div class="help-block with-errors"></div>
                    </div>
                  </div>
                </div>

                {{ form_widget(edit_form) }}
                <div class="col-sm-6 col-md-4 col-sm-offset-0 col-md-offset-4">
                  <a href="{{ path('programme_index')}}" class="btn btn-default btn-block">Annuler</a>
                </div>
                <div class="col-sm-6 col-md-4">
                  <input type="submit" class="btn btn-primary btn-block" value="Modifier" />
                </div>
            {{ form_end(edit_form) }}
          </div>
        </div>
      </div>
    </div>

{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link href="{{ asset('ressources/datepicker/css/bootstrap-datepicker.min.css')}}" rel="stylesheet">
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="{{ asset('ressources/datepicker/js/bootstrap-datepicker.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('ressources/datepicker/locales/bootstrap-datepicker.fr.min.js') }}" type="text/javascript">
</script>
<script>
		    $('#sandbox-container input').datepicker({
		            format: "yyyy-mm-dd",
				    todayBtn: "linked",
				    clearBtn: true,
				    language: "fr",
				    multidate: false,
				    autoclose: true
		    });
	</script>
{% endblock %}
