{% extends 'base.html.twig' %}

{% block title %}Modification de l'utilsateur {{ user.username|upper }}{% endblock %}

{% block body %}

    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="pull-right">
          <a href="{{ path('admin_user_index') }}">
            <button type="button" class="btn btn-primary btn-labeled"><i class="zmdi zmdi-assignment-o zmdi-hc-lg"></i>
                  <span class="btn-label btn-label-right">Liste des utilisateurs</span>
            </button>
          </a>
        </div>
          <h3 class="m-y-0">Modification</h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            {{ form_start(edit_form, {'attr': {'data-toggle': 'validator'}} )}}
                <div class="form-group">
                  <label for="" class="control-label">Nom utilisateur</label>
                  {{ form_widget(edit_form.username)}}
                  {{ form_errors(edit_form.username)}}
                  <div class="help-block with-errors"></div>
                </div>
                <div class="form-group">
                  <label for="" class="control-label">Adresse email</label>
                  {{ form_widget(edit_form.email)}}
                  {{ form_errors(edit_form.email)}}
                  <div class="help-block with-errors"></div>
                </div>
                <div class="form-group">
                  {{ form_widget(edit_form.plainPassword)}}
                  {{ form_errors(edit_form.plainPassword)}}
                  <div class="help-block with-errors"></div>
                </div>
                <div class="form-group">
                  <label class="custom-control custom-control-info custom-checkbox active">
                    {{ form_widget(edit_form.enabled)}}
                    {{ form_errors(edit_form.enabled)}}
                    <span class="custom-control-indicator"></span>
                    <span class="custom-control-label">
                      <label for="">Activer</label>
                    </span>
                  </label>

                </div>
                {{ form_widget(edit_form) }}
                <div class="col-sm-5 col-md-4 col-sm-offset-2 col-md-offset-4">
                  <a href="{{ path('admin_user_index')}}" class="btn btn-default btn-block" />Annuler</a>
                </div>
                <div class="col-sm-5 col-md-4 col-sm-offset-0 col-md-offset-0">
                  <input type="submit" class="btn btn-primary btn-block" value="Modifier" />
                </div>
            {{ form_end(edit_form) }}
          </div>
        </div>
      </div>
    </div>

{% endblock %}
