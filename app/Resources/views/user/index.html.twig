{% extends 'base.html.twig' %}

{% block body %}


<div class="panel panel-default panel-table">
      <div class="panel-heading">
        <div class="pull-right">
          <a href="{{ path('admin_user_new') }}">
            <button type="button" class="btn btn-primary btn-labeled"><i class="zmdi zmdi-plus-square zmdi-hc-lg"></i>
                  <span class="btn-label btn-label-right">Ajouter un nouvel utilisateur</span>
            </button>
          </a>
        </div>
        <h3 class="m-t-0 m-b-5">Listes des Utilisateurs</h3>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered dataTable" id="table-2">
            <thead>
              <tr>
                <th>Id</th>
                <th>Logins</th>
                <th>Emails</th>
                <th>Compteurs</th>
                <th>Première</th>
                <th>Dernière</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              {% for user in users %}
                  <tr>
                    <td>{{ loop.index }}</td>
                      <td>{{ user.username }}</td>
                      <td>{{ user.email }}</td>
                      <td class="text-center">{{ user.loginCount }}</td>
                      <td class="text-center">{% if user.firstLogin %}{{ user.firstLogin|date('Y-m-d H:i:s') }}{% endif %}</td>
                      <td class="text-center">{% if user.lastLogin %}{{ user.lastLogin|date('Y-m-d H:i:s') }}{% endif %}</td>
                      <td>
                          <ul>


                          </ul>
                          <div class="btn-group">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                              Action
                              <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                              <li>
                                  <a href="{{ path('admin_user_show', { 'id': user.id }) }}">Voir</a>
                              </li>
                              <li>
                                  <a href="{{ path('admin_user_edit', { 'id': user.id }) }}">Modifier</a>
                              </li>
                            </ul>
                          </div>
                      </td>
                  </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="{{ asset('ressources/js/tables-datatables.min.js')}}"></script>
{% endblock %}
