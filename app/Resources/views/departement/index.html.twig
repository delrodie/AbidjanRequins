{% extends 'base.html.twig' %}

{% block title %}Liste des departements{% endblock %}

{% block body %}


<div class="panel panel-default panel-table">
      <div class="panel-heading">
        <div class="pull-right">
          <a href="{{ path('admin_departement_new') }}">
            <button type="button" class="btn btn-primary btn-labeled"><i class="zmdi zmdi-plus-square zmdi-hc-lg"></i>
                  <span class="btn-label btn-label-right">Ajouter un nouveau departement</span>
            </button>
          </a>
        </div>
        <h3 class="m-t-0 m-b-5">Listes des departements</h3>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered dataTable" id="table-2">
            <thead>
              <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Noms</th>
                <th>Couleur</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              {% for departement in departements %}
                  <tr>
                    <td>{{ loop.index }}</td>
                      <td>{{ departement.type }}</td>
                      <td>{{ departement.nom }}</td>
                      <td class="text-center">
                        {% if departement.couleur %}
                        <span style="color: #{{ departement.couleur}}"><i class="zmdi zmdi-folder zmdi-hc-2x"></i></span>
                        {% endif %}
                      </td>
                      <td class="text-center">
                          <div class="btn-group">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                              Action
                              <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                              <li>
                                  <a href="#">Voir</a>
                              </li>
                              <li>
                                  <a href="{{ path('admin_departement_edit', { 'slug': departement.slug }) }}">Modifier</a>
                              </li>
                            </ul>
                          </div>
                      </td>
                  </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="{{ asset('ressources/js/tables-datatables.min.js')}}"></script>
{% endblock %}
